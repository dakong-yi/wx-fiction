.item-wrapper {
    width: 100%;
    margin-top: 15px;
}
.item-wrapper navigator {
    width:50%;
    text-align:center;
    float:left;
    font-size:12px;
    margin-bottom: 8px;
}
.item-wrapper navigator .item-inner {
    border:1px solid #b4d9f5;
    background:#e5f8ff;
    color:#333;
    width:90%;
    margin:0 auto;
    height:25px;
    line-height:25px;  
}
.add-book {
    height:40px;
    line-height:40px;
    background:#f4f8fb;
    width:100%;
    text-align:center;
    position:absolute;
    bottom:0;
    left:0;
    font-size:14px;
    color:#555;
    border-top:1px solid #d4dfea; 
}